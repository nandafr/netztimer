<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/lyt_notif"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notif_image"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/netzme" />


    <LinearLayout
        android:id="@+id/lyt_notif_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp">


        <TextView
            android:id="@+id/notif_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:text="00:00:00"
            android:textStyle="bold" />

    </LinearLayout>


    <ImageButton
        android:id="@+id/btn_playpause_notif"
        android:background="?android:selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        android:layout_margin="8dp"

        app:tint="@color/color_primary" />

    <ImageButton
        android:id="@+id/btn_reset_notif"
        android:background="?android:selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/ic_reset"
        app:tint="@color/color_primary" />

    <ImageButton
        android:id="@+id/btn_close_notif"
        android:background="?android:selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/ic_close"
        app:tint="@color/color_primary" />

</LinearLayout>